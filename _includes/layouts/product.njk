      {% if tags.includes("frö") %}
        <small>Allt utsäde kommer från våra egna plantor på gården.</small>
      {% endif %}
    </footer>
  </div>
</article>
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "{{ name }} {% if sort %}'{{ sort }}'{% endif %}",
  "description": "{{ content | findTextContent | truncate(50) }}",
  "image": ["{{ content | findImgSrc }}"],
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/{% if in_stock %}InStock{% else %}OutOfStock{% endif %}",
    "priceCurrency": "SEK",
    "price": "49"
  }
}
</script>
