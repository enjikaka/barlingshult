{% for plant in plantslist %}
  <details class="plant-list">
    <summary>
      {{ plant.data.content | findImgTag | safe }}
      <div class="info">
        <strong>{{ plant.data.name }} {% if plant.data.sort %}'{{ plant.data.sort }}'{% endif %}</strong>
        <em>{{ plant.data.latin }}</em>
      </div>
    </summary>
    {{ plant.data.content | md | findParagraphTag | safe }}
  </details>
{% endfor %}
